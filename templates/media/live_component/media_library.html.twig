<div {{ attributes.defaults(stimulus_controller('media-library')) }} class="space-y-4 relative">

    {# Drop Zone Overlay #}
    <div data-media-library-target="dropZone"
        class="hidden absolute inset-0 z-50 bg-indigo-50/90 border-2 border-dashed border-indigo-500 rounded-lg flex flex-col items-center justify-center backdrop-blur-sm transition-all">
        <div class="p-4 bg-white rounded-full shadow-lg mb-4">
            {{ ux_icon('heroicons:cloud-arrow-up-20-solid', {class: 'w-10 h-10 text-indigo-600'}) }}
        </div>
        <p class="text-lg font-semibold text-indigo-900">{{ 'library.drop_file'|trans({}, 'SymkitMediaBundle') }}</p>
    </div>

    <div class="flex items-center justify-between gap-4">
        <div class="relative flex-1 max-w-md">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                {{ ux_icon('heroicons:magnifying-glass-20-solid', {class: 'h-5 w-5 text-gray-400'}) }}
            </div>
            <input type="text" data-model="debounce(300)|query"
                class="block w-full rounded-md bg-white py-1.5 pl-10 pr-3 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500"
                placeholder="{{ 'library.search_placeholder'|trans({}, 'SymkitMediaBundle') }}" autofocus>
            <div class="absolute inset-y-0 right-0 flex items-center pr-3" data-loading="show">
                <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-indigo-600"></div>
            </div>
        </div>

        {# Upload Button - Only in Picker Mode #}
        {% if this.selectionMode %}
        <button type="button"
            class="inline-flex items-center gap-2 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
            data-action="click->media-library#triggerInput">
            {{ ux_icon('heroicons:arrow-up-tray-20-solid', {class: '-ml-0.5 h-5 w-5'}) }}
            {{ 'library.upload'|trans({}, 'SymkitMediaBundle') }}
        </button>
        {% endif %}
        <input type="file" class="hidden" data-media-library-target="input"
            data-action="change->media-library#onInputChange">
    </div>

    {# Grid Wrapper #}
    <div
        class="bg-white dark:bg-gray-800 shadow-sm border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden flex flex-col">
        <div class="p-6 flex-1 overflow-y-auto">
            {# Grid #}
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                {% for media in this.medias %}
                {# Wrapper: link in normal mode, div in selection mode #}
                {% if this.selectionMode %}
                <div class="group relative aspect-square bg-gray-50 dark:bg-white/5 rounded-lg overflow-hidden border transition-all cursor-pointer box-border
                         {{ this.selectedMediaId == media.id 
                            ? 'border-indigo-600 ring-2 ring-indigo-600 ring-offset-2 dark:ring-offset-gray-900' 
                            : 'border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600' }}"
                    data-action="click->live#action" data-live-action-param="selectMedia"
                    data-live-id-param="{{ media.id }}">
                    {% else %}
                    <a href="{{ path('admin_media_edit', {id: media.id}) }}" class="group relative aspect-square bg-gray-50 dark:bg-white/5 rounded-lg overflow-hidden border transition-all cursor-pointer box-border block
                         border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600">
                        {% endif %}
                        <img src="{{ asset('uploads/media/' ~ media.filename) }}" alt="{{ media.altText }}"
                            class="h-full w-full object-cover object-center transition-opacity {{ this.selectedMediaId == media.id ? 'opacity-100' : 'group-hover:opacity-90' }}"
                            loading="lazy">

                        {# Actions Overlay (only in normal mode) #}
                        {% if not this.selectionMode %}
                        <div
                            class="absolute inset-x-0 bottom-0 z-10 bg-gradient-to-t from-black/80 to-transparent p-3 opacity-0 group-hover:opacity-100 transition-opacity flex justify-end gap-2">
                            <form action="{{ path('admin_media_delete', {id: media.id}) }}" method="post" class="inline"
                                onsubmit="return confirm('{{ 'library.delete_confirm'|trans({}, 'SymkitMediaBundle')|e('js') }}');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ media.id) }}">
                                <button type="submit"
                                    class="text-white hover:text-red-400 transition-colors p-1 rounded-full hover:bg-white/10"
                                    onclick="event.stopPropagation();">
                                    {{ ux_icon('heroicons:trash-20-solid', {class: 'w-4 h-4'}) }}
                                </button>
                            </form>
                        </div>
                        {% endif %}

                        {# Selected Indicator #}
                        {% if this.selectedMediaId == media.id %}
                        <div class="absolute top-2 right-2 z-10 bg-indigo-600 text-white rounded-full p-1 shadow-sm">
                            {{ ux_icon('heroicons:check-16-solid', {class: 'w-3 h-3'}) }}
                        </div>
                        {% endif %}

                        {# File Info Tooltip-ish #}
                        <div
                            class="absolute bottom-0 left-0 right-0 bg-black/60 p-1 text-center opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
                            <p class="text-[10px] text-white truncate px-1">{{ media.originalFilename }}</p>
                        </div>
                        {% if this.selectionMode %}
                </div>
                {% else %}
                </a>
                {% endif %}
                {% else %}
                <div class="col-span-full flex flex-col items-center justify-center py-12 text-center">
                    <div class="rounded-full bg-gray-100 dark:bg-gray-800 p-4 mb-4">
                        {{ ux_icon('heroicons:photo-20-solid', {class: 'h-8 w-8 text-gray-400'}) }}
                    </div>
                    <h3 class="text-sm font-semibold text-gray-900 dark:text-white">{{ 'library.no_media'|trans({}, 'SymkitMediaBundle') }}</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                        {% if this.query %}
                        {{ 'library.no_matches'|trans({'%query%': this.query}, 'SymkitMediaBundle') }}
                        {% else %}
                        {{ 'library.get_started'|trans({}, 'SymkitMediaBundle') }}
                        {% endif %}
                    </p>
                </div>
                {% endfor %}
            </div>
        </div>

        {# Pagination Footer #}
        {% if this.medias|length > 0 %}
        <div
            class="px-4 py-3 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-white/5 flex items-center justify-between sm:px-6">
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-700 dark:text-gray-300">
                        {{ 'library.showing_results'|trans({
                            '%from%': (this.page - 1) * this.limit + 1,
                            '%to%': min(this.page * this.limit, this.medias.count),
                            '%total%': this.medias.count
                        }, 'SymkitMediaBundle') }}
                    </p>
                </div>
                <div>
                    <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="{{ 'library.pagination_aria'|trans({}, 'SymkitMediaBundle') }}">
                        <button type="button" data-action="live#update" data-model="page"
                            data-value="{{ this.page - 1 }}" data-loading="addClass(opacity-50)" {{ this.page==1
                            ? 'disabled' : '' }}
                            class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 disabled:opacity-50 disabled:cursor-not-allowed dark:ring-gray-600 dark:hover:bg-gray-700">
                            <span class="sr-only">{{ 'library.previous'|trans({}, 'SymkitMediaBundle') }}</span>
                            {{ ux_icon('heroicons:chevron-left-20-solid', {class: 'h-5 w-5'}) }}
                        </button>
                        <button type="button" data-action="live#update" data-model="page"
                            data-value="{{ this.page + 1 }}" data-loading="addClass(opacity-50)" {{ (this.page *
                            this.limit)>= this.medias.count ? 'disabled' : '' }}
                            class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1
                            ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0
                            disabled:opacity-50 disabled:cursor-not-allowed dark:ring-gray-600 dark:hover:bg-gray-700">
                            <span class="sr-only">{{ 'library.next'|trans({}, 'SymkitMediaBundle') }}</span>
                            {{ ux_icon('heroicons:chevron-right-20-solid', {class: 'h-5 w-5'}) }}
                        </button>
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>